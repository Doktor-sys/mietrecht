{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "ES2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@smartlaw/types": ["./shared/types/src"],
      "@smartlaw/utils": ["./shared/utils/src"]
    }
  },
  "include": [
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "web-app",
    "mobile-app",
    "services"
  ]
}