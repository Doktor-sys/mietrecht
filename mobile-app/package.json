{
  "name": "@smartlaw/mobile-app",
  "version": "1.0.0",
  "description": "Mobile App f√ºr SmartLaw Mietrecht Agent",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "dev": "expo start --dev-client",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:security": "eslint . --ext .ts,.tsx --rulesdir ./eslint-security-rules",
    "format": "prettier --write \"**/*.{ts,tsx,js,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run type-check",
    "validate:security": "npm run lint:security && npm audit",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "e2e:test": "detox test",
    "e2e:build": "detox build",
    "visual-test": "detox test --configuration android.emu.debug e2e/visual-regression.test.js",
    "visual-test:ios": "detox test --configuration ios.sim.debug e2e/visual-regression.test.js",
    "visual-test:update": "detox test --configuration android.emu.debug e2e/visual-regression.test.js --updateSnapshots",
    "clean": "rm -rf node_modules/.cache",
    "clean:build": "rm -rf .expo",
    "security:audit": "npm audit",
    "security:audit-fix": "npm audit fix"
  },
  "dependencies": {
    "expo": "~49.0.0",
    "react": "18.2.0",
    "react-native": "0.72.3",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/stack": "^6.3.17",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@reduxjs/toolkit": "^1.9.5",
    "react-redux": "^8.1.1",
    "react-native-paper": "^5.9.1",
    "react-native-vector-icons": "^10.0.0",
    "react-native-safe-area-context": "^4.7.1",
    "react-native-screens": "^3.25.0",
    "axios": "^1.4.0",
    "react-native-document-picker": "^9.0.1",
    "react-native-image-picker": "^5.6.0",
    "expo-camera": "~13.4.2",
    "expo-image-picker": "~14.3.2",
    "expo-file-system": "~15.4.3",
    "expo-device": "~5.4.0",
    "expo-notifications": "~0.20.1",
    "expo-secure-store": "~12.3.1",
    "expo-local-authentication": "~13.4.1",
    "socket.io-client": "^4.7.2",
    "react-i18next": "^13.0.2",
    "i18next": "^23.2.11"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@types/react": "~18.2.14",
    "@types/react-native": "~0.72.2",
    "typescript": "^5.1.6",
    "jest": "^29.6.1",
    "@types/jest": "^29.5.3",
    "detox": "^20.10.2",
    "@testing-library/react-native": "^12.1.3"
  },
  "jest": {
    "preset": "react-native"
  }
}